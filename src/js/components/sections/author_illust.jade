section-author--ilust
  div#author-wrapper
    ul.author-list
      li.author-list__box(
        each='{item, i in authorIllust}',
        style='animation-delay: {i*50}ms'
      )
        div.box-wrapper(
          onmouseenter='{onEnterIllust}',
          ontouchstart='{onEnterIllust}',
          onmouseleave='{onLeaveIllust}',
          ontouchend='{onLeaveIllust}'
        )
          div.box__image
            img(src='./images/a{i+8}.png')
          div.box__caption.cf
            p
              | {item.name}
              br
              a(if='{item.pixiv}', href='http://www.pixiv.net/member.php?id={item.pixiv}', target='_blank')
                img.sns(src='./images/pixiv.svg')
              a(if='{item.twitter}', href='http://twitter.com/{item.twitter}', target='_blank')
                img.sns(src='./images/twitter.svg')

  script.
    const $ = App.Plugins.jQuery;
    self.authorIllust = App.Utils.authorIllust;

    onEnterIllust = (e) => {
      let $li = $(e.target);
      $li.find('.box__caption').addClass('active');
      $li.find('.box__image img').addClass('active');
    }

    onLeaveIllust = (e) => {
      let $li = $(e.target);
      $li.find('.box__caption').removeClass('active');
      $li.find('.box__image img').removeClass('active');
    }